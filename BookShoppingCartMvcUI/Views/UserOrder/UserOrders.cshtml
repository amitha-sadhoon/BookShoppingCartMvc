@model IEnumerable<Order>

<div class="container mt-4">

    <a href="/Identity/Account/Manage" class="btn btn-primary mb-4">
        ← Back
    </a>

    <h2 class="mb-4 fw-bold">My Orders</h2>

    @if (Model != null && Model.Any())
    {
        @foreach (var order in Model)
        {
            <div class="card mb-5 border-0 shadow ">

                <!-- Order Header -->
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <div>
                        <small>Order Date</small><br />
                        <strong>@order.CreateDate.ToString("dd MMM yyyy")</strong>
                    </div>

                    <div>
                        <small>Status</small><br />
                        <span class="badge bg-warning text-dark px-3 py-2">
                            @order.OrderStatus.StatusName
                        </span>
                    </div>
                </div>

                <!-- Order Items -->
                <div class="card-body p-4">

                    @if (order.OrderDetail != null && order.OrderDetail.Any())
                    {
                        @foreach (var item in order.OrderDetail)
                        {
                            <div class="row align-items-center border-bottom py-3">

                                <!-- Image -->
                                <div class="col-md-2 text-center">
                                    @if (string.IsNullOrEmpty(item.Book.Image))
                                    {
                                        <img src="/images/no-image.png"
                                             class="img-fluid rounded"
                                             style="height:90px;" />
                                    }
                                    else
                                    {
                                        <img src="/images/@item.Book.Image"
                                             class="img-fluid rounded"
                                             style="height:90px;" />
                                    }
                                </div>

                                <!-- Book Info -->
                                <div class="col-md-4">
                                    <h6 class="mb-1 fw-semibold">
                                        @item.Book.BookName
                                    </h6>
                                    <small class="text-muted">
                                        Genre: @item.Book.Genre.GenreName
                                    </small>
                                </div>

                                <!-- Price -->
                                <div class="col-md-2 text-center text-end">
                                    <span style="font-size:16px; font-weight:600; color:crimson;">
                                    Rs. @item.Book.Price
                                    </span>
                                </div>

                                <!-- Quantity -->
                                <div class="col-md-2 text-center">
                                    Qty: @item.Quantity
                                </div>

                                <!-- Total -->
                                <div class="col-md-2 text-end ">
                                    <span style="font-size:16px; font-weight:600; color:crimson;">
                                    Rs. @(item.Book.Price* item.Quantity)
                                    </span>
                                </div>

                            </div>
                        }

                        <!-- Order Total Section -->
                        <div class="d-flex justify-content-end mt-4">
                            <div class="bg-primary p-3 text-end" style="min-width:250px;">
                                <h5 class="mb-0">
                                    Total Amount:
                                    <span class="bg-danger">
                                        Rs.@order.OrderDetail.Sum(x => x.Book.Price * x.Quantity)
                                    </span>
                                </h5>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info text-center">
            No orders found.
        </div>
    }
</div>
